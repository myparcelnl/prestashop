{
  "extends": "@myparcel/eslint-config/preset-es6",
  "overrides": [
    {
      "files": [
        "./*.js",
        "./private/**/*"
      ],
      "env": {
        "node": true,
        "browser": false
      },
      "rules": {
        "max-len": "off",
        "no-magic-numbers": "off",
        "no-console": "off"
      }
    },
    {
      "files": [
        "./release.config.js"
      ],
      "rules": {
        "no-template-curly-in-string": "off"
      }
    }
  ]
}
