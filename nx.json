{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "npmScope": "myparcel-prestashop",
  "workspaceLayout": {
    "appsDir": "views",
    "libsDir": "views"
  },
  "namedInputs": {
    "production": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.build.json",
      "{workspaceRoot}/views/js/vite-config/index.cjs",
      "{workspaceRoot}/yarn.lock",
      "{projectRoot}/*.config.*",
      "{projectRoot}/package.json",
      "{projectRoot}/src/**/*",
      "{projectRoot}/tsconfig.build.json",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/__tests__/**/*"
    ],
    "test": [
      "production",
      "{projectRoot}/**/*.spec.ts",
      "{projectRoot}/**/__tests__/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production"],
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "build:dev": {
      "inputs": ["production"],
      "dependsOn": ["^build:dev"],
      "outputs": ["{projectRoot}/dist"]
    },
    "test:run": {
      "inputs": ["test"]
    },
    "test:coverage": {
      "inputs": ["test"],
      "outputs": ["{projectRoot}/coverage"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:dev",
          "test:run",
          "test:coverage"
        ],
        "parallel": 10
      }
    }
  }
}
